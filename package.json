{
  "name": "supermorse-app",
  "version": "1.0.0",
  "description": "Morse code tutor and HF communication app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node server.js",
    "dev": "nodemon server.js",
    "electron-dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "mongoose": "^7.3.1",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "serialport": "^10.5.0",
    "@serialport/parser-readline": "^10.5.0",
    "socket.io": "^4.6.2"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.4.0",
    "nodemon": "^2.0.22"
  },
  "build": {
    "appId": "com.supermorse.app",
    "productName": "Supermorse",
    "mac": {
      "category": "public.app-category.education"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education"
    }
  }
}